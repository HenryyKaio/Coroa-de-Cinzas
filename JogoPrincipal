				escreve("Em poucos metros, você percebe algo estranho.\n")
				escreve("No meio de todo muro de pedras, você encontra uma porta camuflada.\n")
				escreve("Embaixo de diversos musgos na parede.\n")
				escreve("- O que é isso?\n")
				escreve("Você começa a abrir a porta, com muita cautela.\n")
				escreve("Está completamente escuro, a unica luz presente é a da porta se abrindo.\n")
				escreve("Meu deus.\n")
				escreve("Um corpo.\n")
				retc(500)
				escreve("Você corre ao encontro do corpo no chão.\n")
				escreve("É um homem de meia idade, sem ferimetos.\n")
				escreve("- O que está fazendo aqui? Quem é você?\n")
				escreve("O homem parece estar inconciente, ele tem o brazão do castelo na roupa.\n")
				escreve("É um soldado do rei.\n")
				escreve("Guarda: Meu jovem, me ajude.\n")
				escreve("Você ajuda o guarda a se sentar melhor.\n")
				escreve("- O senhor está bem? Pode me contar como veio parar aqui?\n")
				escreve("Guarda: Eu não sei bem, acho que fui golpeado.\n")
				escreve("- Pode me contar como isso aconteceu?\n")
				escreve("- Sou um caçador, estou trabalhando para o Rei.\n")
				escreve("Guarda: Eu faço a ronda da noite pelo jardim, todos os dias.\n")
				escreve("G: Ontem a noite, vi as flores do campo se mechendo.\n")
				escreve("G: Não dei muita atenção e vim vindo devagar.\n")
				escreve("G: Talvez fosse somente a donzela de novo.\n")
				escreve("- A donzela? \n")
				escreve("Guarda: ")
				retc(450)
				escreve("- Não contarei nada ao rei. Não me importo. Mas preciso que você fale tudo o que sabe.\n")
				u.aguarde(400)
				escreve("G: Algumas vezes a donzela desce aqui em baixo, me pede para não contar ao rei.\n")
				escreve("G: Uma vez, ela saiu, mas não veio até o jardim. Eu a segui. Ela entrou naquela taverna, o Pérola vermelha.\n")
				escreve("- Entendo. E como o senhor veio parar aqui?\n")
				escreve("Guarda: Eu vim conferir se estava tudo bem, achando que era ela.\n")
				escreve("G: Quando cheguei aqui, fui golpeado e jogado pra dentro.\n")
				escreve("- O senhor sabe quem te golpeou?\n")
				escreve("Guarda: Não o avistei, ele veio por trás.\n")
				escreve("Isso era tudo o que precisava saber. Vou te levar pra dentro.\n")
				escreve("Você leva o guarda para dentro do castelo, junto das curandeiras.\n")
				escreve("Agora você tem uma ótima dica.\n")
				escreve("O pérola Vermelha.\n")
				continuar = falso
				pare

				caso 2:
				escreve("Você se dirige para a cozinha do castelo.\n")
				escreve("A criada que leva a comida para ela, com certeza deve saber algo.\n")
				escreve("Ao olhar a cozinha, vê apenas uma senhora.\n")
				escreve("- Olá senhora, sou o caçador contratado pelo Rei. Estou à procura da donzela.\n")
				escreve("- A senhora poderia me contar um pouco sobre sua convivência com ela?\n")
				escreve("Criada: A donzela não gostava muito de conversa.\n")
				escreve("C: Nem de comer, não sei como estava viva.\n")
				escreve("- A senhora sabe me dizer se isto é dela?\n")
				escreve("Você mostra o colar a ela.\n")
				escreve("A senhora parece ficar tensa, ela pega o colar com as mãos.\n")
				escreve("Criada: Não sei se deveria te contar isso, mas...\n")
				escreve("C: Pelo que sei, esta é a unica coisa que a donzela tem da sua vida antiga.\n")
				escreve("C: Foi a unica coisa vinda com ela quando ela chegou aqui.\n")
				escreve("C: Ela não lembrava nem o seu proprio nome.\n")
				escreve("C: Deduzimos que este deveria ser o nome dela, mas não podemos chama-la assim.\n")
				escreve("C: Ordens do Rei.\n")
				escreve("Isso soa muito estranho, por que não poderiam chama-la pelo nome?\n")
				escreve("- A senhora ja presenciou algo estranho que acontecia com ela?\n")
				escreve("Criada: O rei era muito severa com ela. Ele batia nela.\n")
				escreve("C: A coitadinha ficava com o rosto inchado por dias.\n")
				escreve("C: Uma vez, há pouco tempo fui levar comida para ela de noite,\n")
				escreve("C: mas ela não estava no quarto.\n")
				escreve("C: Fiquei esperando ela chegar, e fiz ela me contar onde estava.\n")
				escreve("C: Não contei nunca ao rei, ele iria bater nela denovo.\n")
				escreve("- E onde ela estava?\n")
				escreve("Criada: Ela disse ter ido ao Perola vermelha. A taverna da cidade.\n")
				escreve("C: Eu entendia a donzela, ela queria ter uma vida normal.\n")
				escreve("Isso é uma dica e tanto.\n")
				escreve("Você agradece a senhora por tudo, inclusive pela pista.\n")
				escreve("E agora você se dirige a sua mais nova esperança.\n")
				escreve("O pérola Vermelha.\n")
				continuar = falso
				pare

				caso contrario:
				escreve("Essa opção é invalida. Escolha uma das opções: \n")
			}//fim do escolha
		}//fim do enquanto
		escreve("Antes de você ir, \n")
		checarItens()
		se(Faca == verdadeiro){
			escreve("Você percebeu que esqueceu sua faca em casa. Melhor ir buscar\n")
			retc(300)
			itens[2] = "faca"
			escreve("Pronto, agora sim.")
		} senao {
			escreve("Então é hora de ir.")
		}
		u.aguarde(300)
		enter()
	}

	funcao checarItens(){
		inteiro opcao
		itens[0] = "Passe"
		itens[1] = "Colar"
		escreve("Você quer checar seus itens? \n")
		escreva("[ 1 ] Sim \n")
		escreva("[ 2 ] Não \n")
		leia(opcao)
		escreva("\n")
		se(opcao == 1){
			Faca = verdadeiro
			escreva("| ")
			para(inteiro i=0; i < 6; i++){
			escreva(itens[i], " | ")
		}
			escreva(" |")
		} senao {
			escreva("Não preciso disso agora")
			retc(300)
		}
	}

	funcao checarVida(){
		se(vida == 30){
			escreve("Você se sente perfeitamente bem e está completamente saudável.")
		} senao se(vida < 30){
			escreve("Você está bem.")
		} senao se(vida < 12){ 
			escreve("Você está machucado. Não dá pra parar agora, mas é bom você tentar se recuperar.")
		} senao se(vida < 6){
			escreve("Você está gravemente ferido.")
		} 
	}

