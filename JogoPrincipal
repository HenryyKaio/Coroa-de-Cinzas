	}

	funcao PerolaVermelha(){
		retc(500)
		escreve("Você enfim chega ao pérola vermelha. \n\n")
		bar()
		escreva("\n\n")
		u.aguarde(450)
		escreve("Você entra no local, mas ninguém percebe sua presença a princípio.\n")
		escreve("Você se senta e conversa com ")
	}
	
	funcao retc(inteiro velocidade) { //É uma função que faz esse efeito de ... mais devagar
		escreve(".")
		u.aguarde(velocidade)
		escreve(".")
		u.aguarde(velocidade)
		escreve(".")
		u.aguarde(velocidade)
		escreva("\n")
	}
	
	funcao flor(){
			escreva("\n")
			escreva("╭────────────────────────────────────────────╮", "\n")
			escreva("│                                            │", "\n")
			escreva("│            /\\^/`\\                          │", "\n")
			escreva("│           | \\/   ||                        │", "\n")
			escreva("│           | |    ||                        │", "\n")
			escreva("│            \\ \\   /                         │", "\n")
			escreva("│             '\\\\//'                         │", "\n")
			escreva("│               ||                           │", "\n")
			escreva("│               ||                           │", "\n")
			escreva("│               ||                           │", "\n")
			escreva("│               ||                           │", "\n")
			escreva("│          |\\   ||  |\\                       │", "\n")
			escreva("│           | | ||  | |                      │", "\n")
			escreva("│           | | || / /                       │", "\n")
			escreva("│           \\  \\||/ /                        │", "\n")
			escreva("│                                            │", "\n")
			escreva("╰────────────────────────────────────────────╯", "\n")
	}
	
	funcao castelo(){
		escreva("!_        \n")
		escreva("                                                  |*~=-.,   \n")
		escreva("                                                  |_,-'`    \n")
		escreva("                                                  |         \n")
		escreva("                                                  |         \n")
		escreva("                                                 /^\\        \n")
		escreva("                   !_                           /   \\       \n")
		escreva("                   |*`~-.,                     /,    \\      \n")
		escreva("                   |.-~^`                     /#\"     \\     \n")
		escreva("                   |                        _/##_   _  \\_   \n")
		escreva("              _   _|  _   _   _            [ ]_[ ]_[ ]_[ ]  \n")
		escreva("             [ ]_[ ]_[ ]_[ ]_[ ]            |_=_-=_ - =_|   \n")
		escreva("           !_ |_=_ =-_-_  = =_|           !_ |=_= -    |    \n")
		escreva("           |*`--,_- _        |            |*`~-.,= []  |    \n")
		escreva("           |.-'|=     []     |   !_       |_.-\"`_-     |    \n")
		escreva("           |   |_=- -        |   |*`~-.,  |  |=_-      |    \n")
		escreva("          /^\\  |=_= -        |   |_,-~`  /^\\ |_ - =[]  |    \n")
		escreva("      _  /   \\_|_=- _   _   _|  _|  _   /   \\|=_-      |    \n")
		escreva("     [ ]/,    \\[ ]_[ ]_[ ]_[ ]_[ ]_[ ]_/,    \\[ ]=-    |    \n")
		escreva("      |/#\"     \\_=-___=__=__- =-_ -=_ /#\"     \\| _ []  |    \n")
		escreva("     _/##_   _  \\_-_ =  _____       _/##_   _  \\_ -    |\\   \n")
		escreva("    [ ]_[ ]_[ ]_[ ]=_0~{_ _ _}~0   [ ]_[ ]_[ ]_[ ]=-   | \\  \n")
		escreva("    |=__-_=-_  =_|-=_  |     |     |_=-___-_ =-__|_    |  \\ \n")
		escreva("     | _- =-     |-_   |     |      |= _=       | -    |___\\ \n")
		escreva("     |= -_=      |=  _ |     |      |_-=_       |=_    |/+\\|\n")
		escreva("     | =_  -     |_ = _ `-.-`       | =_ = =    |=_-   ||+||\n")
		escreva("     |-_=- _     |=_   =            |=_= -_     |  =   ||+||\n")
		escreva("     |=_- /+\\    | -=               |_=- /+\\    |=_    |^^^|\n")
		escreva("     |=_ |+|+|   |= -  -_,--,_      |_= |+|+|   |  -_  |=  |\n")
		escreva("     |  -|+|+|   |-_=  / |  | \\     |=_ |+|+|   |-=_   |_-/ \n")
		escreva("     |=_=|+|+|   | =_= | |  | |     |_- |+|+|   |_ =   |=/  \n")
		escreva("     | _ ^^^^^   |= -  | |  <&>     |=_=^^^^^   |_=-   |/   \n")
		escreva("     |=_ =       | =_-_| |  | |     |   =_      | -_   |    \n")
		escreva("     |_=-_       |=_=  | |  | |     |=_=        |=-    |    \n")
	}

